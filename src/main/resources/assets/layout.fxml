<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.Controller">
   <children>
      <!-- Main container -->
      <VBox spacing="10.0" prefWidth="760.0" prefHeight="560.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
         <!-- Response Section -->
         <TextArea fx:id="responseArea" editable="false" wrapText="true" prefHeight="500.0" promptText="Responses will appear here..." />
         
         <!-- Input Section -->
         <HBox spacing="10.0">
            <TextField fx:id="textInput" promptText="Enter your text here..." HBox.hgrow="ALWAYS" />
            <Button fx:id="sendTextButton" text="Send Text" onAction="#handleSendText" />
            <Button fx:id="uploadImageButton" text="Upload Image" onAction="#handleUploadImage" />
         </HBox>
         
         <!-- Thinking Indicator and Stop Button -->
         <HBox spacing="10.0" alignment="CENTER">
            <Label fx:id="thinkingLabel" text="Thinking..." visible="false" style="-fx-font-size: 16px; -fx-text-fill: gray;" />
            <Button fx:id="stopButton" text="Stop" onAction="#handleStop" disable="true" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
